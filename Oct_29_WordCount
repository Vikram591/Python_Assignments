def word_count(sentence):
    word_freq = {}
    for word in sentence.lower().split():
        word = word.strip('.,!?;"\'()[]{}')
        if word:
            word_freq[word] = word_freq.get(word, 0) + 1
    def sort_key(item):

        return (-item[1], item[0]) 
    sorted_words = sorted(word_freq.items(), key=sort_key)
    return sorted_words
sentence = "Hi Vikram! How are you doing today? Vikram, I hope you are doing well."
print(word_count(sentence))
